<!DOCTYPE html>
<html>
	<head>
	  <title>Sigep Network</title>
	  <%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<body>
		
		<%= render 'layouts/header' %>
		<div class="container">
			<% if !flash[:notice].blank? %>
				<div class="notice">
				<%= flash[:notice] %>
				</div>
			<% end %>
			
			<div id="content">
				<%= yield %>
			</div>
			
		<div id="footer">
			<p id="copyright">&copy; Sigma Phi Epsilon, DC Gamma | Nick Nathan </p>
		</div>
			</div>	
		</div>
	</body>
</html>
