<% @page_title = "Profiles Search" %>

<%= link_to("<< SigEp Network", {:action => 'index'}, :class => 'back-link') %>

<div class"profiles index">
	<h2>Profiles Search</h2>
	<div>
		<%= form_tag({:action => 'search'}) do %>
	  	<%= label_tag(:q, "Search profiles:") %>
	  	<%= text_field_tag(:q) %>
	  	<%= submit_tag("Search") %>
	<% end %>
	</div>
	<br>
	<table class="listing" summary="Profile list">
		<tr class="header">
			<th>Name</th>
			<th>Industry</th>
			<th>Class Year</th>
			<th>Location</th>
			<th>Country</th>
			<th>Email Address</th>
			<th>Last Update</th>
			<th>Profile</th>				
		</tr>
		<% @profiles.each do |profile| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= profile.first_name + " " + profile.last_name %></td>
			<td><%= profile.industry %></td>
			<td><%= profile.class_year %></td>			
			<td class="center"><%= profile.residence_city %><%= ", " if !profile.residence_state.blank? %>
								<%= profile.residence_state %></td>
			<td class="center"><%= profile.residence_country %></td>			   	
			<td class="center"><%= profile.email %></td>
			<td class="center"><%= profile.updated_at.to_formatted_s(:short) %></td>			
			<td class="actions">
				<%= link_to("View", {:action => 'show', :id => profile.id}, :class => 'action show') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
