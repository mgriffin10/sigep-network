<%= link_to("<< Main Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="profiles new">
	<h2>Welcome to the SigEp Network!</h2>
	<h3>Complete your profile to get started.</h3>

	<%= form_for(:profile, 
				:multipart => true, 
				:url => {:action => 'create', :id => @user.id}) do |f| %>

		<%= render(:partial => "form", :locals => {:f => f}) %>

		<div class="form-buttons">
			<%= submit_tag("Create Profile") %>
		</div>

	<% end %>
</div>
