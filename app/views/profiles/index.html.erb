<% @page_title = "Profiles" %>

<%= link_to("<< Main Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class"profiles index">
	<h2>Profiles</h2>

	<table class="listing" summary="Profile list">
		<tr class="header">
			<th>Name</th>
			<th>Industry</th>
			<th>Class Year</th>
			<th>Location</th>
			<th>Country</th>
			<th>Email Address</th>
			<th>Profile</th>				
		</tr>
		<% @profiles.each do |profile| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= profile.first_name + " " + profile.last_name %></td>
			<td><%= profile.industry %></td>
			<td><%= profile.class_year %></td>			
			<td class="center"><%= profile.residence_city %><%= ", " if !profile.residence_state.blank? %>
								<%= profile.residence_state %></td>
			<td class="center"><%= profile.residence_country %></td>			   	
			<td class="center"><%= profile.email %></td>
			<td class="actions">
				<%= link_to("View", {:action => 'show', :id => profile.id}, :class => 'action show') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
