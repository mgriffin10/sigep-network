<% @page_title = "User" %>

<%= link_to("<< Main Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="users show">
	<h2>User Information</h2>

	<table summary="users detailed view">
		<tr>
			<th>Email Address</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>Last Update</th>
			<td><%= @user.updated_at %></td>
		</tr>
	</table>

	<br>
	<%= link_to("Edit User", {:action => 'edit'}) %>

</div>
