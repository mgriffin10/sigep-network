<% @page_title = "#{@user.first_name} #{@user.last_name}" %>

<%= link_to("<< Main Menu", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div class="users show">
	<h2>User Information</h2>

	<table summary="users detailed view">
		<tr>
			<th>Name</th>
			<td><%= @user.first_name + " " + @user.last_name %></td>
		</tr>
		<tr>
			<th>Email Address</th>
			<td><%= @user.email %></td>
		</tr>
		<tr>
			<th>Last Update</th>
			<td><%= @user.updated_at %></td>
		</tr>
	</table>

	<br>
	<%= link_to("Edit User", {:action => 'edit'}) %>

</div>
