<h2>Password Reset</h2>

<%= form_tag({:controller => 'users', :action => 'post_password_reset'}, method: "post", class: 'user-form') do %>

	<div class="form-group">
		<%= label_tag "New Password" %>		
		<%= password_field_tag :password, nil, class: 'form-control', placeholder: "Enter password", required: true %>
	 </div>

	 <div class="form-group">
		<%= label_tag "Confirm Password" %>
		<%= password_field_tag :password_confirmation, nil, class: 'form-control', placeholder: "Re-enter password", required: true %>
	 </div>
	
	<%= hidden_field_tag :id, @user_id %>
	<%= submit_tag("Reset Password", :class => "btn btn-default") %>

<% end %>