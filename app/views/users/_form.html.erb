<%= error_messages_for(@user) %>

<table summary="users form fields">
	<tr>
		<th>Email</th>
		<td><%= f.text_field(:email) %></td>
	</tr>
	<tr>
	<% if @user.blank? %>
		<th>New Password</th>
	<% else %>
		<th>Enter Password</th>
	<% end %>
		<td><%= f.password_field(:password) %></td>
	</tr>
	<tr>
		<th>Confirm Password</th>
		<td><%= f.password_field(:password_confirmation) %></td>
	</tr>
</table>